<% provide(:title, 'Create system') %>
<h1>Create system</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@system) do |f| %>

      <div class="row">
        <%= f.label :system_name %>
        <%= f.text_field :system_name %>
      </div>

      <div class="row">
        <%= f.label :system_type %>
        <%= f.text_field :system_type %>
      </div>

      <div class="row">
        <%= f.label :system_main_web_url %>
        <%= f.text_field :system_main_web_url %>
      </div>

      <div class="row">
        <%= f.label :system_user_group_url %>
        <%= f.text_field :system_user_group_url %>
      </div>

      <div class="actions">
        <%= f.submit "Create system", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
