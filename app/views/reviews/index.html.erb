<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<%= link_to 'New Review', new_review_path, :class => "btn btn-info"  %>

<br/>

<table>
  <thead>
    <tr>
      <th colspan="1">Title</th>
      <th colspan="1">What do you like about the system?</th>
      <th colspan="1">What would you change about the system?</th>
      <th colspan="1">SUS score</th>
      <th colspan="1">cSUS score</th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.review_title %></td>
        <td><%= review.review_positive_text %></td>
        <td><%= review.review_negative_text %></td>
        <td><%= review.sus_score %></td>
        <td><%= review.csus_score %></td>
        <div class="form-group">
          <td><%= link_to 'Show', review, :class => "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_review_path(review), :class => "btn btn-primary"  %></td>
          <td><%= link_to 'Destroy', review,
            method: :delete,
            data: { confirm: 'Are you sure?' },
            :class => "btn btn-danger" %>
          </td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<section>
  <%= form_tag import_reviews_path, multipart: true, :class => 'form-toolbar' do %>
    <fieldset class="form-group">
      <%= label_tag 'csv_import', 'Import reviews from CSV' %>
      <%= file_field_tag :file, class: 'btn btn-default' %>
      <small class="text-muted">CSV files should have a header row with the same name as the data fields in the Review data model. These will be autodetected and each subsequent row will be created as a new Review in the system.</small>
    </fieldset>

    <%= submit_tag "Import Reviews from CSV", class: 'btn btn-default btn-primary' %>
  <% end %>
</section>
