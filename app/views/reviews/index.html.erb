<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Review title</th>
      <th>Positive comments</th>
      <th>Negative comments</th>
      <th>SUS score</th>
      <th>cSUS score</th>
      <th>Star rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.review_title %></td>
        <td><%= review.review_positive_text %></td>
        <td><%= review.review_negative_text %></td>
        <td><%= review.sus_score %></td>
        <td><%= review.csus_score %></td>
        <td><%= review.star_rating %></td>
        <div class="form-group">
          <td><%= link_to 'Show', review, :class => "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_review_path(review), :class => "btn btn-primary"  %></td>
          <td><%= link_to 'Destroy', review,
            method: :delete,
            data: { confirm: 'Are you sure?' },
            :class => "btn btn-danger" %>
          </td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
