<p id="notice"><%= notice %></p>

<h1>Listing Trusts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trusts.each do |trust| %>
      <tr>
        <td><%= trust.trust_name %></td>
        <td><%= trust.nhs_code %></td>
        <td><%= trust.trust_post_code %></td>
        <td><%= trust.latitude %></td>
        <td><%= trust.longitude %></td>

        <td><%= link_to 'Show', trust %></td>
        <td><%= link_to 'Edit', edit_trust_path(trust) %></td>
        <td><%= link_to 'Destroy', trust, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

